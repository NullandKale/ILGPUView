<UserControl x:Class="ILGPUView.UI.FileTabs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ILGPUView.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl>
        <TabItem Header="New File">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="defaultCodeBlock" AcceptsReturn="True" AcceptsTab="True" Background="Black" Foreground="White" Padding="10 0 0 0"/>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</UserControl>
